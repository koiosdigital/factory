{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM"],
    "types": ["node", "w3c-web-serial", "vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "#build/ui": ["./node_modules/@nuxt/ui/.nuxt"]
    }
  },
  "include": ["src/**/*", "auto-imports.d.ts", "components.d.ts", "env.d.ts"],
  "exclude": ["dist", "node_modules"]
}
